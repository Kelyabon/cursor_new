# Пример конфигурации для центрального сервера

# База данных (SQLite по умолчанию)
DATABASE_URL=sqlite+aiosqlite:///./heartbeat.db
# Для PostgreSQL: postgresql+asyncpg://user:password@localhost/dbname

# Секретный токен для авторизации
SECRET_TOKEN=your-secret-token-here

# Настройки сервера
HOST=0.0.0.0
PORT=8000
DEBUG=false
